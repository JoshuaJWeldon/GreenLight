package greenlight;

import java.sql.*;

import javax.swing.*; 

import java.awt.*; 
import java.awt.event.ActionEvent;

public class Driver {
	
	public static final String DOCTOR = "Doctor";
	public static final String USER   = "User";
	public static final String VENUE  = "Venue";
	
	private DatabaseControler dbms;
	
	private JFrame frame;
	private JPanel currPanel;
	
	private JPanel welcomePanel;
	private JPanel userPanel;
	private JPanel doctorPanel;
	private JPanel venuePanel;
	
	public Driver(){
		
		dbms  = new DatabaseControler();
		
		frame = new JFrame("Green Light"); 
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(280,430);  
		frame.setLocationRelativeTo(null);
		
	}
	
	public static void main(String[] args) {
		
		Driver driver = new Driver();
	
		driver.createWelcomePanel();
		
		try{driver.dbms.testMethod();} 
		catch(ClassNotFoundException c){}
		catch(SQLException s){}
	
	}
	
	private void createVenuePanel() {
		// TODO Auto-generated method stub
		
	}

	private void createDoctorPanel() {
		
		JButton usrButtonReqHlthRec;
		JButton localEvents;
		JButton Settings;
		JLabel userLabel;
		
		frame.remove(currPanel);
		
		currPanel = new JPanel();

		JButton getID = new JButton("Get ID");
		JButton setID = new JButton("Set ID");
		JButton checkReg = new JButton("Check Registration");
		JButton changeSettings = new JButton("Change Settings");

		currPanel.setPreferredSize (new Dimension (240, 390));
		currPanel.setLayout (null);

		getID.setBounds (30, 35, 175, 70);
		setID.setBounds (30, 115, 175, 70);
		checkReg.setBounds (30, 200, 175, 70);
		changeSettings.setBounds (35, 290, 170, 70);
		
		frame.add(currPanel);		
	}

	private void createUserPanel() {
		
		JButton usrButtonReqHlthRec;
		JButton localEvents;
		JButton Settings;
		JLabel userLabel;

		userPanel = new JPanel();
		 
		//create things
		
		usrButtonReqHlthRec = new JButton("Request Health Record");
		localEvents = new JButton("Local Events");
		Settings = new JButton("Settings"); 
		userLabel = new JLabel("USER");
		
		//set size
		
		userPanel.setPreferredSize(new Dimension(286,431));
		
		//add things
		
		userPanel.add(usrButtonReqHlthRec);
		userPanel.add(localEvents);
		userPanel.add(Settings);
		userPanel.add(userLabel);
		
		//orientation
		
		userLabel.setBounds(5, 35, 50, 25);
		usrButtonReqHlthRec.setBounds(30, 100, 225, 75);
		localEvents.setBounds(30, 200, 225, 75);
		Settings.setBounds(30, 300, 225, 75);
		
		usrButtonReqHlthRec
		button.setBounds(30, 275, 225, 65);
		button.addActionListener(new welcomeAction() { 
			@Override public void actionPerformed(ActionEvent event) { 
				frame.remove(welcomePanel);
				welcomePanel.setVisible(false);  
		
					currPanel = doctorPanel;
					doctorPanel.setVisible(true);
					frame.add(doctorPanel);
					frame.setSize(new Dimension(280,430));
				
		}); 

		 
		
		userPanel.setVisible(false);
		}

	private void createWelcomePanel() {
			
		welcomePanel        = new JPanel();
		String[]  userTypes = {DOCTOR, USER, VENUE};
		JLabel    label     = new JLabel("What kind of user are you: ");
		JComboBox comboBox  = new JComboBox(userTypes);  
		JButton button      = new JButton( "Enter"); 
		
		
		welcomePanel.add(label); 
		welcomePanel.add(comboBox);  
		welcomePanel.add(button);
		
		button.setBounds(30, 275, 225, 65);
		button.addActionListener(new welcomeAction() { 
			@Override public void actionPerformed(ActionEvent event) { 
				frame.remove(welcomePanel);
				welcomePanel.setVisible(false);  
				
				switch ((String)comboBox.getSelectedItem()) {
				
				case DOCTOR:
					
					currPanel = doctorPanel;
					doctorPanel.setVisible(true);
					frame.add(doctorPanel);
					frame.setSize(new Dimension(280,430));
					break;
					
				case USER:
					
					currPanel = userPanel;
					userPanel.setVisible(true);
					frame.add(userPanel);
					frame.setSize(new Dimension(280,430));
					break;
					
				case VENUE:
	
					currPanel = venuePanel;
					venuePanel.setVisible(true);
					frame.add(venuePanel);
					frame.setSize(new Dimension(280,430));
					break;

				default:
					System.exit(-1);
					break;
				}
			}
		}); 
		

		
		welcomePanel.setVisible(true);
		frame.add(welcomePanel);
		frame.pack();
		frame.setVisible(true);
		frame.setSize(new Dimension(280,430));
	}
	
}

		