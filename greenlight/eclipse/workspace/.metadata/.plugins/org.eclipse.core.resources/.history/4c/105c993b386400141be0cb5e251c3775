package greenlight;

import javax.swing.*; 

import java.awt.*; 
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class GuiControler {
	
	private JFrame    frame; 
	private JPanel    comboPanel;
	private JLabel    comboLbl; 
	private JComboBox typeBox;  
	private JButton   getTypeButton;
	private String    currType;   
	
	public GuiControler() { 
		frame = new JFrame(); 
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); 
		frame.setTitle("Green Light");
		frame.setSize(300,250);  
		frame.setLocationRelativeTo(null);
		
	}
	
	public String getUserType(){
		
		String[] userType = {Driver.DOCTOR, Driver.USER, Driver.VENUE};
        currType          = null; 
		
		comboPanel    = new JPanel(); 
		comboLbl      = new JLabel("What type of user are you:"); 
		typeBox       = new JComboBox<String>(userType);  
		getTypeButton = new JButton( "Enter");
		
		comboPanel.add(comboLbl); 
		comboPanel.add(typeBox);  
	
		  
		
		getTypeButton.addActionListener(new ActionListener() { 
			
			@Override 
			public void actionPerformed(ActionEvent event) { 
			
				currType = (String)typeBox.getSelectedItem();
			}
		});
		
		frame.add(comboPanel, BorderLayout.NORTH); 
	//	frame.add(listPanel, BorderLayout.CENTER); 
		frame.add(getTypeButton,BorderLayout.SOUTH);  
		frame.setVisible(true);
		
		return currType;
		
	}
}
		
	
		
		 	
		
		

